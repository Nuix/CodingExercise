generator client {
  provider        = "prisma-client-js"
  binaryTargets   = ["native", "darwin", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "sqlserver"
  url      = env("DATABASE_CONNECTION_STRING")
}

model User {
  id              Int               @id @default(autoincrement())
  name            String            @db.VarChar(255)
  email           String            @db.VarChar(255)
  created_at      DateTime          @default(now())
  UserInvestments UserInvestments[]
}

model UserInvestments {
  user_id        Int
  investment_id  Int
  purchase_value Decimal
  shares         Int
  created_at     DateTime

  User       User       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction)
  Investment Investment @relation(fields: [investment_id], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@id([user_id, investment_id])
  @@index([user_id], map: "UserDecisions_user_id_fkey")
  @@index([investment_id], map: "UserDecisions_decision_id_fkey")
}

model Investment {
  id              Int               @id @default(autoincrement())
  name            String
  current_value   Decimal
  created_at      DateTime
  UserInvestments UserInvestments[]
}
